---
import Layout from '../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import { name, openGraph } from 'spectre:globals';

const aboutEntry = await getEntry('other', 'about');
// biome-ignore lint/style/noNonNullAssertion: Should always be defined.
const { Content: AboutContent } = await render(aboutEntry!); 
---

<Layout 
  title={`About | ${name}`}
  description={openGraph.home.description || 'About Paradise Labs'}
>
  <h1>About Us</h1>
  <div class="prose">
    <AboutContent />
  </div>
</Layout>
