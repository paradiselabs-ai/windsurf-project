---
import Icon from "./Icon.astro";
import { name } from 'spectre:globals';

const path = Astro.url.pathname;
---
<nav>
  <a class="site-title" href="/">
    <span style="display: inline-flex; align-items: center; gap: 8px;"> 
      <img src="/images/favicon.png" alt="" height="100" style="vertical-align: middle;" width="100" fetchpriority="high" /> 
      <img src="/images/paradiselabs-logo.png" alt="ParadiseLabs Logo" height="80" style="vertical-align: middle;" width="auto" fetchpriority="high" class="paradiselabs-logo" /> 
    </span>
  </a>
  <ul>
    <li>
      <a href="/articles" class:list={{ active: path.startsWith('/articles') }}>AI</a>
    </li>
    <li>
      <a href="/blog" class:list={{ active: path.startsWith('/blog') }}>Blog</a>
    </li>
    <li>
      <a href="/thoughts" class:list={{ active: path.startsWith('/thoughts') }}>Thoughts</a>
    </li>
    <li>
      <a href="/about" class:list={{ active: path.startsWith('/about') }}>About</a>
    </li>
    <li>
      <div id="search-container">
        <button id="search-button" aria-label="Search" title="Search the site">Search</button>
        <div id="search-modal" class="hidden">
          <div id="search-modal-content">
            <div id="search-header">
              <h3>Search</h3>
              <button id="search-close" aria-label="Close search">
                <Icon type="lucide" name="x" width={20} height={20} />
              </button>
            </div>
            <div id="search-body">
              <p class="search-note">Note: Full search functionality will be available after deployment. Google Search needs to index your live site for accurate results.</p>
              <div class="gcse-search"></div>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ul>
  <button class="mobile-nav-toggle">
    <Icon type="lucide" name="menu" width={24} height={24} class="menu-closed" />
    <Icon type="lucide" name="x" width={24} height={24} class="menu-open" />
  </button>
</nav>
<script is:inline>
  const searchButton = document.querySelector('#search-button');
  const searchModal = document.querySelector('#search-modal');
  const searchClose = document.querySelector('#search-close');
  const navToggle = document.querySelector('.mobile-nav-toggle');

  // Load Google Custom Search script
  window.onload = function() {
    const gcse = document.createElement('script');
    gcse.type = 'text/javascript';
    gcse.async = true;
    gcse.src = 'https://cse.google.com/cse.js?cx=11d3b407dc1a14eaa';
    const s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(gcse, s);
  };

  // Open search modal
  searchButton?.addEventListener('click', () => {
    searchModal.classList.remove('hidden');
    document.body.style.overflow = 'hidden'; // Prevent scrolling when modal is open
  });

  // Close search modal
  searchClose?.addEventListener('click', () => {
    searchModal.classList.add('hidden');
    document.body.style.overflow = ''; // Restore scrolling
  });

  // Close modal on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !searchModal.classList.contains('hidden')) {
      searchModal.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Open search modal with Ctrl+K
    if (e.key === 'k' && e.ctrlKey) {
      e.preventDefault();
      searchModal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  });

  // Close modal when clicking outside the content
  searchModal?.addEventListener('click', (e) => {
    if (e.target === searchModal) {
      searchModal.classList.add('hidden');
      document.body.style.overflow = '';
    }
  });

  navToggle?.addEventListener('click', () => {
    navToggle.classList.toggle('active');
    document.querySelector('nav').classList.toggle('active');
  });

  const handleTabletChange = () => {
    if (window.matchMedia('(max-width: 810px)').matches) {
      searchElement.placeholder = 'Search';
    } else {
      searchElement.placeholder = 'Search (Ctrl+K)';
    }
  }

  document.addEventListener('DOMContentLoaded', handleTabletChange);
  document.addEventListener('resize', handleTabletChange);
</script>
<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'Geist Mono', monospace;
    z-index: 50;
  }

  .site-title {
    font-weight: 800;
    text-decoration: none;
    font-size: 1.25em;
    z-index: 2;
  }

  nav ul {
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
    list-style-type: none;
    align-items: center;
  }

  nav ul li {
    position: relative;
  }

  nav a {
    color: inherit;
    text-decoration: none;
    padding: .25rem .5rem;
  }

  nav a:hover, nav a:focus-visible, nav a.active {
    background-color: var(--primary);
    outline: none;
  }

  #search-container {
    position: relative;
  }

  #search-button {
    display: inline-flex;
    align-items: center;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: .25rem .5rem;
    font-family: 'Geist Mono', monospace;
    font-size: 1em;
  }

  #search-button:hover, #search-button:focus-visible {
    background-color: var(--primary);
    outline: none;
  }

  #search-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 100;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 10vh;
  }

  #search-modal.hidden {
    display: none;
  }

  #search-modal-content {
    width: 90%;
    max-width: 800px;
    background-color: #252525;
    border: 1px solid var(--primary);
    border-radius: 4px;
    overflow: hidden;
  }

  #search-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #353535;
  }

  #search-header h3 {
    margin: 0;
  }

  #search-close {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
  }

  #search-body {
    padding: 1rem;
    max-height: 70vh;
    overflow-y: auto;
  }
  
  .search-note {
    margin-top: 0;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background-color: rgba(140, 92, 245, 0.1);
    border-left: 3px solid var(--primary);
    font-size: 0.9em;
    color: #c7c7c7;
  }

  /* Google Custom Search overrides */
  #search-body .gsc-control-cse {
    background-color: transparent !important;
    border: none !important;
  }

  #search-body .gsc-input-box {
    border-color: #353535 !important;
    background-color: #1e1e1e !important;
  }

  #search-body input.gsc-input {
    color: white !important;
    background-color: #1e1e1e !important;
  }
  
  #search-body .gsc-search-button {
    background-color: var(--primary) !important;
    border-color: var(--primary) !important;
  }
  
  #search-body .gsc-input-box-focus,
  #search-body .gsc-input-box-hover {
    border-color: var(--primary) !important;
  }
  
  #search-body table.gsc-search-box td.gsc-input {
    padding-right: 12px !important;
  }
  
  #search-body .gsib_a {
    padding: 8px 9px !important;
  }

  /* Mobile styles for search button handled by general nav styles */

  .mobile-nav-toggle {
    display: none;
    width: 40px;
    height: 40px;
    background-color: #121212;
    border: 1px solid #353535;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
  }

  .menu-open {
    display: none;
  }

  .mobile-nav-toggle.active .menu-open {
    display: flex;
  }

  .mobile-nav-toggle.active .menu-closed {
    display: none;
  }

  .paradiselabs-logo {
    display: inline-block;
  }

  @media screen and (max-width: 810px) {
    nav {
      padding: 0 1rem;
      padding-top: 1rem;
      transition: all .25s ease;
    }

    .mobile-nav-toggle {
      display: flex;
    }

    .paradiselabs-logo {
      display: none;
    }

    nav ul {
      flex-direction: column;
      gap: 0;
      position: absolute;
      width: 100%;
      top: calc(1rem + 40px);
      right: 0;
      padding: 1rem;
      z-index: 1;
      opacity: 0;
      pointer-events: none;
      transition: all .25s ease;
      user-select: none;
      height: calc(100vh - 1rem - 40px);
      align-items: start;
    }

    nav.active {
      background-color: #181818;
    }

    nav.active ul {
      opacity: 1;
      pointer-events: all;
      background-color: #181818;
    }

    nav ul li {
      position: relative;
      transition: all .25s ease-out;
      top: -1.5rem;
      border-bottom: 1px solid #353535;
      width: 100%;
      max-width: none;
      padding: 0;
      font-size: 1.125em;
    }
  
    nav ul li a {
      display: block;
      padding: .75rem 0;
      width: 100%;
      padding-left: 1rem;
    }

    nav ul li:first-child {
      border-top: 1px solid #353535;
    }

    nav.active ul li {
      top: 0;
    }

    #search {
      width: 100%;
      max-width: none;
      padding: .75rem 1rem;
    }

    #search-results {
      width: 100%;
      top: 100%;
      font-size: 0.875em;
    }
  }
</style>
<style is:global>
  /* Google Custom Search global styles */
  .gsc-control-cse {
    font-family: 'Geist Sans', sans-serif !important;
    background-color: transparent !important;
    border: none !important;
  }

  .gs-title {
    color: var(--color-accent-purple) !important;
    text-decoration: none !important;
  }

  .gs-title:hover {
    text-decoration: underline !important;
  }

  .gs-snippet {
    color: #c7c7c7 !important;
  }

  .gsc-url-top, .gs-visibleUrl {
    color: var(--color-accent-green) !important;
  }

  .gsc-result-info {
    color: #c7c7c7 !important;
  }

  .gsc-results .gsc-cursor-box {
    margin-top: 1rem !important;
  }

  .gsc-cursor-page {
    color: white !important;
    background-color: #353535 !important;
    padding: 0.5rem 0.75rem !important;
    border-radius: 4px !important;
    margin-right: 0.5rem !important;
  }

  .gsc-cursor-current-page {
    background-color: var(--primary) !important;
  }

  .gcsc-find-more-on-google {
    color: var(--color-accent-cyan) !important;
  }

  .gcsc-find-more-on-google-magnifier {
    fill: var(--color-accent-cyan) !important;
  }

  /* Fix input text color */
  .gsc-input-box {
    background-color: #1e1e1e !important;
  }
  
  input.gsc-input {
    color: white !important;
    background-color: #1e1e1e !important;
    background-image: none !important;
  }
  
  .gsc-search-button-v2 {
    background-color: var(--primary) !important;
    border-color: var(--primary) !important;
  }
  
  .gsc-tabHeader.gsc-tabhActive {
    border-color: var(--primary) !important;
    background-color: var(--primary) !important;
  }
  
  .gsc-tabHeader.gsc-tabhInactive {
    background-color: #353535 !important;
    border-color: #353535 !important;
  }
  
  .gsc-webResult.gsc-result,
  .gsc-results .gsc-imageResult {
    background-color: transparent !important;
    border-color: #353535 !important;
  }

  .separator {
    margin: .5rem 0;
    border: none;
    border-top: 1px solid #353535;
  }
</style>