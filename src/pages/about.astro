---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { name, openGraph } from 'spectre:globals';
import Card from '../components/Card.astro';

// Get the about entry from the 'other' collection
const otherEntries = await getCollection('other');
const aboutEntry = otherEntries.find(entry => entry.id === 'about');

// Import the content directly
import { Content as AboutContent } from '../content/other/about.md';

// AboutContent is already imported above
---

<Layout 
  title={`About | ${name}`}
  description={openGraph.home.description || 'About Paradise Labs'}
>
  <div class="layout-grid-left" slot="left">
    <Card>
      <h2 style="font-size: 1.8em; margin-top: 0; text-align: left;">About</h2>
      <p style="margin-top: 0.5rem; margin-bottom: 1rem; text-align: left; font-size: 0.9em; color: var(--color-text-secondary);">Learn more about ParadiseLabs and our mission</p>
    </Card>
  </div>
  
  <div class="layout-grid-right" slot="right">
    <Card>
      <div class="prose">
        <AboutContent />
      </div>
    </Card>
  </div>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  .prose {
    line-height: 1.6;
  }
</style>
